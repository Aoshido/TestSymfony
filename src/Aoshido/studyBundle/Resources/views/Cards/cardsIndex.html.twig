{% extends '::default/layout.html.twig' %}

{% block title %}Quiz Time!{% endblock %}

{% block cards %}class="active"{% endblock %}

{% block content %}

    {% include "AoshidostudyBundle::flashmessages.html.twig" %}


    <div class="container">
        <table class="table">
            <tr>
                {% for pregunta in preguntas %}
                    <td class="col-md-2">
                        <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                            <div class="flipper">
                                <div class="panel front card_front">
                                    {{ pregunta.contenido }}
                                </div>
                                <div class="panel back card_back">
                                    <p>
                                        {% if (pregunta.vof) %}
                                            Verdadero
                                        {% else %}
                                            Falso
                                        {% endif %}
                                    </p>
                                    <p>{{ pregunta.respuesta }}</p>
                                </div>
                            </div>
                        </div>                        
                    </td>
                    {% if ((loop.index % 5) == 0) %}
                    </tr>
                    <tr>
                    {% endif %}
                {% endfor %}
            </tr>
        </table>
    </div>

{% endblock %}