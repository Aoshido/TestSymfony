{% extends '::base.html.twig' %}

{% block title %}Quiz Time!{% endblock %}

{% block body %}
    <div class="container">
        <div class="panel panel-primary">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="panel-heading">Questionario</div>

            <div class="panel-body">
                <div class="panel panel-info">
                    <div class="panel-heading">Pregunta numero {{ pregunta.id }}</div>
                    <div class="panel-body">
                        {{ pregunta.contenido }}

                        {{ form_start(form) }}
                        {{ form_row(form.Verdad) }}
                        {{ form_row(form.Falso) }}
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    {% endblock %}