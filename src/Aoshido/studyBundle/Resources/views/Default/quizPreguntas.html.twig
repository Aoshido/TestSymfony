{% extends '::base.html.twig' %}

{% block title %}Quiz Time!{% endblock %}

{% block body %}
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">Questionario</div>

            <div class="panel-body">
                <div class="panel panel-info">
                    <div class="panel-heading">Pregunta numero {{ pregunta.id }}</div>
                    <div class="panel-body">
                        {{ pregunta.contenido }}
                    </div>
                </div>
                <div class="panel panel-info">
                    <div class="panel-heading">Tu Respuesta?</div>
                    {{ form_start(form, { 'style': 'horizontal' }) }}
                    {{ form_row(form.vof) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}