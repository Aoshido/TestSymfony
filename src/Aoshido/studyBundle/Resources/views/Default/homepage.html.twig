<HEAD>
    <h1 style="font-family:arial">Comienzo de la Pagina</h1>
</HEAD>
<body>
    <table border="1">
        <tr>
            <th>Pregunta</th>
            <th>Contenido</th>
            <th>V o F </th>
        </tr>
        {%for pregunta in preguntas %}
            <tr>
                <td>{{ pregunta.id }}</td>
                <td>{{ pregunta.contenido }}</td>
                <td>
                    {% if (pregunta.vof == 1) %} 
                        Verdadero
                    {%else%}
                        Falso
                    {% endif %}
                </td>
            </tr>
        {% endfor %}    
    </table>

    <h2 style="font-family:arial">Aca el form para agregar preguntas</h2>
    <table border="1">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <tr>
            <td>{{ form_label(form.contenido) }}</td>
            <td>{{ form_widget(form.contenido) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.vof) }}</td>
            <td>{{ form_widget(form.vof) }}</td>
        </tr>
        <tr>
            <td colspan="2">{{ form_widget(form.save) }}</td>
        </tr>

        {{ form_end(form) }}
    </table>
</body>